//#include "FIFO_1.h"

#include <io.h>
#include "system.h"
#include <stdio.h>
#include <stdlib.h>


void delay(int n);
int producer();


int main()
{
//	producer();
//	IOWR_32DIRECT(0x00079000,0,0x69);
//	printf("Wrote [%d] to shared memory!\n",IORD_32DIRECT(0x00079000,0));

	for (int var = 1; var <= 10; ++var) {
		int num = rand();
		IOWR_32DIRECT(0x00079000,var*32,num);
		printf("Wrote [%d] to shared memory!\n",IORD_32DIRECT(0x00079000,var));
	}

	IOWR_32DIRECT(0x00079000,0,1);
	printf("Set done flag!\n");

	while(1) { }

	return 0;
}


int producer()
{
	printf("Producer starting..\n");

	FIFO_1_INIT(); // Initialize the FIFO

	int j = 5;
	while(j<=500)
	{
		delay(100000);
		WRITE_FIFO_1(&j); // Write to the producer-consumer fifo
		delay(100000);

		printf("Producer sent [%i]\n",j);
		j+=11;
	}

	printf("Producer finished..\n");
	return 0;
}


void delay(int n)
{
	int i;
	for(i=n; i>0; i--)
	{
		continue;
	}
}
